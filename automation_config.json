    "workflows": {
        "workflow_full_login": {
            "description": "完整的登录、选择组织、关闭通知流程",
            "steps": [
                {
                    "action": "ensure_on_page",
                    "value": "https://saaserp-pos.yibainetwork.com/#/login_page"
                },
                {
                    "action": "type",
                    "target": "login_page_username_input",
                    "value": "{username}"
                },
                {
                    "action": "type",
                    "target": "login_page_password_input",
                    "value": "{password}"
                },
                {
                    "action": "click",
                    "target": "login_page_login_button"
                },
                {
                    "action": "wait_visible",
                    "target": "org_popup_dialog",
                    "timeout": 5
                },
                {
                    "action": "type",
                    "target": "org_popup_input",
                    "value": "156"
                },
                {
                    "action": "wait_visible",
                    "target": "org_popup_list_item",
                    "timeout": 3
                },
                {
                    "action": "click",
                    "target": "org_popup_list_item"
                },
                {
                    "action": "click",
                    "target": "org_popup_confirm_button"
                },
                {
                    "action": "wait_url_contains",
                    "value": "home_page",
                    "timeout": 10
                },
                {
                    "action": "if_visible_click",
                    "target": "home_page_notification_close_button",
                    "check_target": "home_page_notification_popup"
                }
            ]
        }
    },
